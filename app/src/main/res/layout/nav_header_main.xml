<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:background="@color/colorPageBg"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@color/colorPageBg"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">


        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/nav_header"
            android:gravity="bottom"
            android:id="@+id/ll_header_bg"
            android:layout_height="@dimen/nav_header_height"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <LinearLayout
                android:background="#4000"
                android:gravity="bottom"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="夕阳无限好"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorWhite"
                        android:textSize="17sp" />

                    <TextView
                        android:background="@drawable/shape_bg_level"
                        android:id="@+id/tv_level"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:text="Lv.10"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:textStyle="italic|bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ripple_one_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:id="@+id/ll_nav_homepage"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_nav_homepage" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:text="项目主页"
                android:textColor="@color/colorContent"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:background="@drawable/ripple_one_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:id="@+id/ll_nav_scan_download"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_nav_scan" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:text="扫码下载"
                android:textColor="@color/colorContent"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ripple_one_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:id="@+id/ll_nav_deedback"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_nav_deedback" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:text="问题反馈"
                android:textColor="@color/colorContent"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ripple_one_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:id="@+id/ll_nav_about"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_nav_about" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:text="关于云阅"
                android:textColor="@color/colorContent"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:background="@color/colorNavLine"
            android:id="@+id/line"
            android:layout_height="0.3dp"
            android:layout_width="match_parent" />

        <LinearLayout
            android:background="@drawable/ripple_one_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:id="@+id/ll_nav_login"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_nav_login" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:text="登录GitHub账号"
                android:textColor="@color/colorContent"
                android:textSize="15sp" />

        </LinearLayout>


        <!--夜间模式，正在完善-->
        <LinearLayout
            android:background="@drawable/ripple_one_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:visibility="gone">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/ic_nav_night" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="夜间模式"
                android:textColor="@color/colorContent"
                android:textSize="15sp" />

            <android.support.v7.widget.SwitchCompat
                android:clickable="false"
                android:id="@+id/day_night_switch"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:background="@drawable/ripple_one_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:id="@+id/ll_nav_exit"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_nav_exit" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:text="退出应用"
                android:textColor="@color/colorContent"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>